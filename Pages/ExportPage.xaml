<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Pages.ExportPage"
             Title="ExportPage">
    <VerticalStackLayout>
        <Entry x:Name="name" 
            Text="{Binding Name}"
            MaxLength="255"
            Placeholder="Type name of your file"
            FontSize="18"
            ClearButtonVisibility="WhileEditing"
            IsTextPredictionEnabled="false"
        />
        <Button
            Text="Export"
            Clicked="OnExport"    
        />
    </VerticalStackLayout>
</ContentPage>